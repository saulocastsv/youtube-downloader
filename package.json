{
  "name": "meu-app",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "npx install -g libnss3 && electron .",
    "dist": "electron-builder"
    
  },
  "build": {
    "appId": "com.downloadyoutube.meuapp",
    "productName": "Downloader",
    "directories": {
      "output": "dist/"
    },
    "files": [
      "dist/**",          
      "backend/**",       
      "node_modules/**",  
      "main.js",
      "index.html"
    ],
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": true,
      "allowToChangeInstallationDirectory": false
    }
  },
  "devDependencies": {
    "electron": "^23.1.0",
    "electron-builder": "^24.0.0"
  }
  
}
